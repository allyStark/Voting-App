<h2 class="page-header maintext">Register</h2>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger maintext">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="/users/register">
    <div class="form-group">
        <label class="maintext">Name</label>
        <input type="text" class="form-control col-4 maintext" placeholder="Name" name="name">
    </div>    
    <div class="form-group">
        <label class="maintext">Username</label>
        <input type="text" class="form-control col-4 maintext" placeholder="Username" name="username">
    </div>
    <div class="form-group">
        <label class="maintext">Email</label>
        <input type="text" class="form-control col-4 maintext" placeholder="me@poll.com" name="email">
    </div>     
    <div class="form-group">
        <label class="maintext">Password</label>
        <input type="password" class="form-control col-4 maintext" placeholder="Password" name="password">
    </div>
    <div class="form-group">
        <label class="maintext">Confirm Password</label>
        <input type="password" class="form-control col-4 maintext" placeholder="Confirm Password" name="confirmpassword">
    </div>  
    <button type="submit" class="btn btn-default submitbutton">Submit</button>
</form>